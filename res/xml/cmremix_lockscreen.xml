<PreferenceScreen 
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
        android:title="@string/cmremix_lockscreen_title">

     <!-- Hide carrier on lock screen -->
     <com.android.settings.cyanogenmod.SystemSettingSwitchPreference
         android:key="lock_screen_hide_carrier"
         android:title="@string/lock_screen_hide_carrier_title"
         android:summary="@string/lock_screen_hide_carrier_summary" />

    <!-- Weather -->
    <PreferenceCategory
        android:key="status_bar_show_weather_category"
        android:title="@string/status_bar_show_weather_category" >

        <PreferenceScreen
            android:key="lockscreen_weather"
            android:title="@string/lock_screen_weather_settings_title"
            android:fragment="com.android.settings.cmremix.LockScreenWeatherSettings" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="lockscreen_shortcuts_category"
        android:title="@string/cmremix_lockscreen_shortcuts_category" >

        <PreferenceScreen
            android:key="lock_screen_color_settings"
            android:title="@string/lock_screen_colors_title"
            android:summary="@string/lock_screen_color_settings_summary"
            android:fragment="com.android.settings.cmremix.LockScreenColorSettings" />

        <PreferenceScreen
                 android:key="slim_lockscreen_shortcuts"
                 android:fragment="com.android.settings.cmremix.dslv.ActionListViewSettings"
                 android:summary="@string/lockscreen_shortcuts_summary"
                 android:title="@string/lockscreen_shortcuts_title">
             <extra android:name="actionMode" android:value="4" />
             <extra android:name="maxAllowedActions" android:value="5" />
             <extra android:name="disableLongpress" android:value="true" />
             <extra android:name="useAppPickerOnly" android:value="true" />
             <extra android:name="fragment" android:value="com.android.settings.cmremix.LockscreenShortcut" />
        </PreferenceScreen>

        <PreferenceScreen
            android:key="cm_lockscreen_shortcuts"
            android:fragment="com.android.settings.cyanogenmod.LockscreenShortcuts"
            android:title="@string/cm_lockscreen_shortcuts_title"
            android:summary="@string/cm_lockscreen_shortcuts_summary" />

        <SwitchPreference
            android:key="lockscreen_bottom_shortcuts"
            android:title="@string/lockscreen_bottom_shortcuts_title"/>

    </PreferenceCategory>

</PreferenceScreen>
